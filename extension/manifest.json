{
  "manifest_version": 3,
  "name": "UX Quant Recorder",
  "version": "1.0",
  "permissions": ["storage", "tabs"],
  "host_permissions": [ "http://localhost:8080/*" ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "UX Recorder"
  }
}